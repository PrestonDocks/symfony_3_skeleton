{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Users</h1>
        <a href="{{ path('admin_user_add') }}" class="btn btn-primary">Create User</a>
        <br><br>
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Name</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.firstName }} {{ user.lastName }}</td>
                        <td>
                            <a href="{{ path('admin_user_edit', {'id': user.id}) }}" data-action="edit" class="btn btn-warning btn-xs"><span class="fa fa-edit" title="Edit User"></span></a>
                            <a href="{{ path('admin_user_delete', {'id': user.id}) }}" data-action="delete" class="btn btn-danger btn-xs delete"><span class="fa fa-trash" title="Delete User"></span></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('.delete').on('click',function (e) {
                if (!confirm('Are you sure you want to delete this user')){
                    return false;
                }
            })
        })
    </script>
{% endblock %}